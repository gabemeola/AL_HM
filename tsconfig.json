{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"rootDir": "./src",
		"noEmit": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"strictNullChecks": false,
		"lib": [
			"DOM",
			"es2015",
			"es2016",
			"es2017"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node",
			"source-map",
			"uglify-js",
			"webpack"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"awesomeTypescriptLoaderOptions": {
		"forkChecker": true,
		"useWebpackText": true
	},
	"compileOnSave": false,
	"buildOnSave": false
}